---
import "../styles/globals.css";

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "Vault CMS - Use Obsidian as a CMS for Astro", 
  description = "Turn your Obsidian vault into a powerful content management system for your Astro website. Set up in seconds." 
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://vaultcms.org" />
    
    <!-- Theme Color -->
    <meta name="theme-color" content="#110f18" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet">
    
    <style is:global>
      :root {
        --font-sans: 'DM Sans', system-ui, sans-serif;
        --font-mono: 'IBM Plex Mono', monospace;
        --font-consolas: 'Consolas', monospace;
      }

      @font-face {
        font-family: 'Consolas';
        src: url('/fonts/consolas.ttf') format('truetype');
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }
    </style>
  </head>
  <body class="font-sans antialiased bg-background text-foreground">
    <slot />
  </body>
</html>
